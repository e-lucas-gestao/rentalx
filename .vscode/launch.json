  "version": "0.2.0",
  "configurations": [
    {
      "type": "node", /*specifies we're using node*/
      "request": "attach", /*instead of using launch, allow us to encapsulate our server */
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      // "program": "${workspaceFolder}/src/server.ts", when used in conjunction with attach it is disabled
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}